@model IEnumerable<Product>
@{
    ViewBag.Title = "Products";
}
<h1>@ViewBag.Title</h1>
<div class="table-responsive">
<table class="table table-striped table-hover">
    <thead  class="thead-dark">
        <tr>
            <th scope="col">@Html.DisplayNameFor(model => model.Image)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.ProductId)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.CommercialName)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.GenericName)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.CatalogueAddress)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.Insulator)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.Conductor)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.Design)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.Restriction)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.Country)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.CprClass)</th>            
            <th scope="col">@Html.DisplayNameFor(model => model.VoltageClass)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.CableRange)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.IsArmoured)</th>         
        </tr>
    </thead>
    <tbody>
    @foreach (var product in Model)
    {

        <tr>
            <td><img src="images/Country/@product.CountryId/@product.Image" width="120px" /></td>
            <td>@product.ProductId</td>
            <td>@product.CommercialName</td>
            <td>@product.GenericName</td>
            <td><a href="@product.CatalogueAddress">Link</a></td>
            <td>@product.Insulator.Description</td>
            <td>@product.Conductor.Description</td>
            <td>@product.Design.Description</td>
            <td>@product.Restriction.Description</td>
            <td>@product.Country.Description</td>
            <td>@product.CprClass.Description</td>
            <td>@product.VoltageClass.Description</td>
            <td>@product.CableRange.Description</td>
            <td>@product.IsArmoured</td>
        </tr>

    }
    </tbody>
</table>
</div>
<div>@Html.ActionLink("New", "create")